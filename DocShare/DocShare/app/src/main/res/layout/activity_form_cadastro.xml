<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".formularios.FormCadastro">


        <TextView
            android:id="@+id/cadastro_de"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="315dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="30dp"
            android:gravity="center_horizontal|top"
            android:text="Cadastro de usuário"
            android:textColor="@color/soft_black"
            android:textStyle="bold"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/rectangle_4"
            style="@style/ContainerLogin"
            android:layout_margin="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/container_components"
            android:elevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cadastro_de" />

        <EditText
            android:id="@+id/edit_cadastro_email"
            style="@style/Edit_Text"
            android:background="@drawable/edit_text"
            android:drawableLeft="@drawable/ic_email"
            android:elevation="10dp"
            android:hint=" E-mail"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_4"
            app:layout_constraintStart_toStartOf="@+id/rectangle_4"
            app:layout_constraintTop_toTopOf="@+id/rectangle_4" />

        <EditText
            android:id="@+id/edit_cadastro_senha"
            style="@style/Edit_Text"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:drawableRight="@drawable/ic_eye"
            android:elevation="10dp"
            android:hint=" Senha"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/rectangle_4"
            app:layout_constraintTop_toBottomOf="@+id/edit_cadastro_email" />

        <EditText
            android:id="@+id/edit_confirmar_senha"
            style="@style/Edit_Text"
            android:background="@drawable/edit_text"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:drawableRight="@drawable/ic_eye"
            android:elevation="10dp"
            android:hint=" Confirme sua senha"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/rectangle_4"
            app:layout_constraintTop_toBottomOf="@+id/edit_cadastro_senha" />

        <TextView
            android:id="@+id/info_pessoais"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="315dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="30dp"
            android:gravity="center_horizontal|top"
            android:text="Informações pessoais"
            android:textColor="@color/soft_black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_4" />

        <View
            android:id="@+id/rectangle_5"
            style="@style/ContainerLogin"
            android:layout_height="495dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/container_components"
            android:elevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/edit_cadastro_nome"
            style="@style/Edit_Text"
            android:background="@drawable/edit_text"
            android:maxLines="1"
            android:elevation="10dp"
            android:hint="Nome completo"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_5"
            app:layout_constraintStart_toStartOf="@+id/rectangle_5"
            app:layout_constraintTop_toTopOf="@+id/rectangle_5" />

        <EditText
            android:id="@+id/edit_cadastro_cpf"
            style="@style/Edit_Text"
            android:background="@drawable/edit_text"
            android:elevation="10dp"
            android:hint="CPF"
            android:maxLength="11"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_5"
            app:layout_constraintStart_toStartOf="@+id/rectangle_5"
            app:layout_constraintTop_toBottomOf="@+id/edit_cadastro_nome" />

        <EditText
            android:id="@+id/edit_cadastro_RG"
            style="@style/Edit_Text"
            android:background="@drawable/edit_text"
            android:elevation="10dp"
            android:maxLength="7"
            android:hint="RG"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_5"
            app:layout_constraintStart_toStartOf="@+id/rectangle_5"
            app:layout_constraintTop_toBottomOf="@+id/edit_cadastro_cpf" />

        <EditText
            android:id="@+id/edit_cadastro_telefone"
            style="@style/Edit_Text"
            android:background="@drawable/edit_text"
            android:elevation="10dp"
            android:maxLength="14"
            android:hint="Telefone"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_5"
            app:layout_constraintStart_toStartOf="@+id/rectangle_5"
            app:layout_constraintTop_toBottomOf="@+id/edit_cadastro_RG" />

        <Spinner
            android:id="@+id/edit_cargo"
            style="@style/Edit_Text"
            android:entries="@array/cargos"
            android:background="@drawable/edit_text"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:elevation="10dp"
            android:hint="Cargo"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_5"
            app:layout_constraintStart_toStartOf="@+id/rectangle_5"
            app:layout_constraintTop_toBottomOf="@+id/edit_cadastro_telefone" />

        <Spinner
            android:id="@+id/edit_setor"
            style="@style/Edit_Text"
            android:entries="@array/setores"
            android:background="@drawable/edit_text"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:elevation="10dp"
            android:hint="Setor"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_5"
            app:layout_constraintStart_toStartOf="@+id/rectangle_5"
            app:layout_constraintTop_toBottomOf="@+id/edit_cargo" />

        <Button
            android:id="@+id/button_cadastrar"
            android:layout_width="346dp"
            android:layout_height="69dp"
            android:layout_margin="30dp"
            android:backgroundTint="@color/button_blue"
            android:text="Finalizar cadastro"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_5" />

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_pessoais"
            app:srcCompat="@drawable/ic_person" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:flow_horizontalAlign="center"
            android:text="Imagem de perfil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_picture" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>